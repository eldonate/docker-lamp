version: "3.8"

services:
  web:
    build:
      context: /opt/lamp
      dockerfile: Dockerfile
    volumes:
      - /opt/lamp/html:/var/www/html
    depends_on:
      - db
      - redis
    environment:
      VIRTUAL_HOST: "{{ virtual_host }}"
      LETSENCRYPT_HOST: "{{ virtual_host }}"
      LETSENCRYPT_EMAIL: "{{ letsencrypt_email }}"
    networks:
      - proxy-tier

  db:
    image: mariadb:10.6
    restart: always
    environment:
      MYSQL_ROOT_PASSWORD: "{{ mysql_root_password }}"
      MYSQL_DATABASE: "{{ mysql_database }}"
      MYSQL_USER: "{{ mysql_user }}"
      MYSQL_PASSWORD: "{{ mysql_password }}"
    volumes:
      - db_data:/var/lib/mysql
    networks:
      - proxy-tier

  redis:
    image: redis:7.2-alpine
    restart: always
    volumes:
      - redis_data:/data
    networks:
      - proxy-tier

volumes:
  db_data:
  redis_data:

networks:
  proxy-tier:
    external: true
